---
# make ansible play nice in a virtualenv
# ansible_python_interpreter: python

# Connection to the devices
provider:
  host: '{{ inventory_hostname }}'
  username: admin
  password: admin
  authorize: true
  use_ssl: no
  transport: eapi

pause_sec: 5

# TFTP Server
tftp_srv: 'tftp://172.16.130.200/'
config_dir: 'configs/'

# Upgrade related vars
target_version: 4.15.0F
swi_url: "{{ tftp_srv }}/swi/EOS-{{ target_version }}.swi"
swi_dest: "flash:"
install_pause: 90


eos_debug: true

eos_users:
  - name: simplebob
    nopassword: true
    privilege: 0
    role: network-operator
